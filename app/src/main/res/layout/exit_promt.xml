<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#DFDFDF"
    android:layout_gravity="center">


    <ImageView
        android:id="@+id/image_holder"
        android:layout_width="match_parent"
        android:layout_height="@android:dimen/thumbnail_height"
        android:layout_marginHorizontal="20pt"
        android:layout_marginTop="100dp"
        android:contentDescription="application_logo"
        android:src="@drawable/logo_design"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nais mo ba ipagpaliban \n       and pag lalaro?"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="356dp" />

    <TextView
        android:layout_width="218dp"
        android:layout_height="64dp"
        android:text="Are you sure you \n   want to EXIT?"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.595"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.437" />

    <Button
        android:id="@+id/btnPlayGame"
        android:layout_width="169dp"
        android:layout_height="67dp"
        android:background="@drawable/play_button_background"
        android:onClick="onClickExitGame"
        android:text="EXIT \n (umalis)"
        android:textAllCaps="false"
        android:textColor="#dfdfdf"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="OnClick"
        tools:layout_editor_absoluteY="409dp" />

    <Button
        android:id="@+id/btnPlayGame"
        android:layout_width="169dp"
        android:layout_height="67dp"
        android:background="@drawable/play_button_background"
        android:onClick="onClickPlayGame"
        android:text="CANCEL \n (maglaro)"
        android:textAllCaps="false"
        android:textColor="#dfdfdf"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="OnClick"
        tools:layout_editor_absoluteY="409dp" />


    .

</androidx.constraintlayout.widget.ConstraintLayout>